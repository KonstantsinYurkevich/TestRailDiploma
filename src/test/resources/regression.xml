<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Regression Test suite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="tests.base.AnnotationTransformer"/>
    </listeners>
    <test name="Log in and add user ">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.LogInLogOutTest"/>
            <class name="tests.AddUserTest"/>
        </classes>
    </test> <!-- Test -->
    <test name="Add project">
        <classes>
            <class name="tests.AddProjectTest"/>
        </classes>
    </test> <!-- Test -->
    <test name="Add user to the project">
        <classes>
            <class name="tests.AddUserToTheProjectTest"/>
        </classes>
    </test> <!-- Test -->
    <test name="API add project, test case and test case section tests">
        <classes>
            <class name="tests.api.AddProjectApiTest"/>
            <class name="tests.api.AddTestSectionAndTestCaseTest"/>
        </classes>
    </test> <!-- Test -->
</suite>
